<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F6FA"
    android:fitsSystemWindows="false">

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/login_teal"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingBottom="16dp"
        android:paddingTop="50dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow_back"
            app:tint="@color/white" />

        <TextView
            android:id="@+id/tvPageTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tambah Supplier"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginStart="16dp"/>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_menu_pelanggan"
                app:tint="@color/login_teal"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="20dp"/>

            <EditText
                android:id="@+id/etStoreName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nama Toko Supplier"
                android:textColorHint="#000000"
                android:textColor="#000000"
                android:padding="12dp"
                android:background="@drawable/bg_rounded"
                android:backgroundTint="#FFFFFF"
                android:layout_marginBottom="10dp"/>

            <EditText
                android:id="@+id/etContact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nama Sales / Kontak"
                android:textColorHint="#000000"
                android:textColor="#000000"
                android:padding="12dp"
                android:background="@drawable/bg_rounded"
                android:backgroundTint="#FFFFFF"
                android:layout_marginBottom="10dp"/>

            <EditText
                android:id="@+id/etPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nomor Telepon/WA"
                android:textColorHint="#000000"
                android:textColor="#000000"
                android:padding="12dp"
                android:background="@drawable/bg_rounded"
                android:backgroundTint="#FFFFFF"
                android:layout_marginBottom="10dp"
                android:inputType="phone"/>

            <EditText
                android:id="@+id/etAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Alamat Lengkap"
                android:textColorHint="#000000"
                android:textColor="#000000"
                android:padding="12dp"
                android:background="@drawable/bg_rounded"
                android:backgroundTint="#FFFFFF"
                android:layout_marginBottom="10dp"
                android:inputType="textMultiLine"
                android:minLines="2"
                android:gravity="top|start"/>

            <EditText
                android:id="@+id/etDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Keterangan (Cth: Supply Piala &amp; Plastik)"
                android:textColorHint="#000000"
                android:textColor="#000000"
                android:padding="12dp"
                android:background="@drawable/bg_rounded"
                android:backgroundTint="#FFFFFF"
                android:layout_marginBottom="20dp"
                android:inputType="textMultiLine"
                android:minLines="2"
                android:gravity="top|start"/>

            <Button
                android:id="@+id/btnSave"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SIMPAN DATA"
                android:backgroundTint="@color/login_teal"
                android:layout_marginBottom="40dp"
                android:padding="12dp"/>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>