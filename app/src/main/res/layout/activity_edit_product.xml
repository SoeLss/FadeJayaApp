<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F6FA">

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/login_teal"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingBottom="16dp"
        android:paddingTop="50dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow_back"
            app:tint="@color/white" />

        <TextView
            android:id="@+id/tvPageTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit Barang"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginStart="16dp"/>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <androidx.cardview.widget.CardView
                android:layout_width="100dp"
                android:layout_height="140dp"
                app:cardCornerRadius="15dp"
                app:cardElevation="4dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp">

                <ImageView
                    android:id="@+id/imgProductInput"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@android:drawable/ic_menu_camera"
                    android:scaleType="centerCrop"
                    android:background="#E0E0E0"
                    android:padding="35dp"/>
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ketuk foto untuk mengganti"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="20dp"
                android:textColor="#757575"
                android:textSize="12sp"/>

            <EditText
                android:id="@+id/etName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nama Barang"
                android:padding="12dp"
                android:textColorHint="#2a2a2a"
                android:textColor="#00C2CB"
                android:background="@drawable/bg_rounded"
                android:backgroundTint="#FFFFFF"
                android:layout_marginBottom="10dp"
                android:textSize="14sp"/>

            <EditText
                android:id="@+id/etSeries"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Seri"
                android:padding="12dp"
                android:textColorHint="#2a2a2a"
                android:textColor="#00C2CB"
                android:background="@drawable/bg_rounded"
                android:backgroundTint="#FFFFFF"
                android:layout_marginBottom="10dp"
                android:textSize="14sp"/>

            <EditText
                android:id="@+id/etCode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Kode Produk"
                android:textColorHint="#2a2a2a"
                android:padding="12dp"
                android:textColor="#00C2CB"
                android:background="@drawable/bg_rounded"
                android:backgroundTint="#FFFFFF"
                android:layout_marginBottom="10dp"
                android:textSize="14sp"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">

                <EditText
                    android:id="@+id/etHeight"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Ukuran"
                    android:textColorHint="#2a2a2a"
                    android:textColor="#00C2CB"
                    android:padding="12dp"
                    android:background="@drawable/bg_rounded"
                    android:backgroundTint="#FFFFFF"
                    android:textSize="14sp"
                    android:layout_marginEnd="5dp"/>

                <EditText
                    android:id="@+id/etRack"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Lokasi Rak"
                    android:textColorHint="#2a2a2a"
                    android:textColor="#00C2CB"
                    android:padding="12dp"
                    android:background="@drawable/bg_rounded"
                    android:backgroundTint="#FFFFFF"
                    android:textSize="14sp"
                    android:layout_marginStart="5dp"/>
            </LinearLayout>

            <Spinner
                android:id="@+id/spCategory"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/bg_rounded"
                android:backgroundTint="#FFFFFF"
                android:layout_marginBottom="10dp"/>

            <Spinner
                android:id="@+id/spType"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/bg_rounded"
                android:backgroundTint="#FFFFFF"
                android:layout_marginBottom="10dp"/>

            <EditText
                android:id="@+id/etBuyPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Harga Beli (Rp)"
                android:inputType="number"
                android:padding="12dp"
                android:textColorHint="#2a2a2a"
                android:textColor="#00C2CB"
                android:background="@drawable/bg_rounded"
                android:backgroundTint="#FFFFFF"
                android:layout_marginBottom="10dp"
                android:textSize="14sp"/>

            <EditText
                android:id="@+id/etSellPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Harga Jual (Rp)"
                android:inputType="number"
                android:padding="12dp"
                android:textColorHint="#2a2a2a"
                android:textColor="#00C2CB"
                android:background="@drawable/bg_rounded"
                android:backgroundTint="#FFFFFF"
                android:layout_marginBottom="10dp"
                android:textSize="14sp"/>

            <EditText
                android:id="@+id/etWholesalePrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Harga Grosir (Rp)"
                android:inputType="number"
                android:padding="12dp"
                android:textColorHint="#2a2a2a"
                android:textColor="#00C2CB"
                android:background="@drawable/bg_rounded"
                android:backgroundTint="#FFFFFF"
                android:layout_marginBottom="10dp"
                android:textSize="14sp"/>

            <EditText
                android:id="@+id/etStock"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Stok"
                android:textColorHint="#2a2a2a"
                android:textColor="#00C2CB"
                android:inputType="number"
                android:padding="12dp"
                android:background="@drawable/bg_rounded"
                android:backgroundTint="#FFFFFF"
                android:layout_marginBottom="10dp"
                android:textSize="14sp"/>

            <Button
                android:id="@+id/btnSave"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="UPDATE BARANG"
                android:backgroundTint="@color/login_teal"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="40dp"/>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>